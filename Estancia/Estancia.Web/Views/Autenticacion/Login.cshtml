@{
    ViewData["Title"] = "Login";
}

<div>
    <h1 class="display-4 text-center">Login</h1>
    <form method="post" class="w-50 mx-auto d-block mt-3 border border-secondary p-3 rounded-2">
        <div class="form-group">
            <label for="Mail">Mail</label>
            <input autocomplete="Mail" name="Mail" type="email" class="form-control" id="Mail"
                placeholder="Ingresa Mail">
        </div>
        <div class="form-group mt-3">
            <label for="Contrasena">Contrasena</label>
            <input autocomplete="Contrasena" name="Contrasena" type="password" class="form-control" id="Contrasena"
                placeholder="Ingresa Contrasena">
        </div>

        <button type="submit" class="btn btn-primary mt-3">Login</button>
    </form>
    <div class="w-50 mx-auto d-block">
        @if (ViewBag.msg != null)
        {
            <p>@ViewBag.msg</p>
        }
    </div>
</div>
